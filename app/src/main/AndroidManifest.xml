<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.notesapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NotesApp">
        <activity
            android:name=".Acitvity.NoteDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".Acitvity.EditNoteAcitvity"
            android:exported="false" />
        <activity
            android:name=".Acitvity.CreateNote"
            android:exported="false" />
        <activity
            android:name=".Acitvity.ForgotActivity"
            android:exported="false" />
        <activity
            android:name=".Acitvity.RegistrationAcitvity"
            android:exported="false" />
        <activity
            android:name=".Acitvity.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Acitvity.MainActivity"
            android:exported="true" />
    </application>

</manifest>